config.js
// Your teammates will give you their backend link
window.BACKEND_URL = "https://your-teammate-backend.repl.co";



script.js
const screens = {
  upload: document.getElementById("uploadScreen"),
  score: document.getElementById("scoreScreen"),
  done: document.getElementById("doneScreen"),
};

function show(screen) {
  Object.values(screens).forEach(s => s.classList.remove("active"));
  screens[screen].classList.add("active");
}

document.getElementById("uploadBtn").onclick = async () => {
  // pretend we send to backend:
  const fakeResponse = { score: 85, reward: 10 };
  document.getElementById("scoreText").innerText = `Score: ${fakeResponse.score}`;
  document.getElementById("rewardText").innerText = `Reward: ${fakeResponse.reward} SRD`;
  show("score");
};

document.getElementById("claimBtn").onclick = async () => {
  // pretend claim worked
  document.getElementById("txText").innerText = "Transaction complete (mock)";
  show("done");
};

document.getElementById("homeBtn").onclick = () => show("upload");





